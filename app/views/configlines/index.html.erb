<p id="notice"><%= notice %></p>

<h1>Listing Configlines</h1>

<table>
  <thead>
    <tr>
      <th>Router</th>
      <th>Linenumber</th>
      <th>Lineconfig</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configlines.each do |configline| %>
      <tr>
        <td><%= configline.router_id %></td>
        <td><%= configline.linenumber %></td>
        <td><%= configline.lineconfig %></td>
        <td><%= link_to 'Show', configline %></td>
        <td><%= link_to 'Edit', edit_configline_path(configline) %></td>
        <td><%= link_to 'Destroy', configline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Configline', new_configline_path %>
